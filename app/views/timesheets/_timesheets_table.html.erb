<table id="timesheet-table">
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Amount</th>
      <th>Approval Date</th>
      <th></th>
    </tr>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.date.strftime("%-d/%-m/%Y") %></td>
        <td><%= timesheet.start_time.strftime("%H:%M") %> - <%= timesheet.end_time.strftime("%H:%M") %></td>
        <td>$<%= timesheet.amount.round(2) %></td>
        <td><%= timesheet.approval_date %></td>
        <td>
          <%= link_to 'Approve TS', "timesheets/#{timesheet.id}", method: :put %>
      
        </td>
      </tr>
    <% end %>
</table>